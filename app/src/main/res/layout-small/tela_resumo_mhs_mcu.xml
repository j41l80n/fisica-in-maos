<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/branco"

    android:scrollbars="none" >
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView android:textSize="17sp" android:textColor="@color/preto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_tela_resumo_mhs_mcu_01"/>
        <ImageView
            android:layout_gravity="center"
            android:background="@color/branco"
            android:src="@drawable/iv_0148"
            android:layout_width="300dp"
            android:scaleType="fitXY"
            android:layout_height="240dp" />
        <TextView android:textSize="17sp" android:textColor="@color/preto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_tela_resumo_mhs_mcu_02"/>
        <ImageView
            android:layout_marginTop="10dp"
            android:src="@drawable/iv_mhs_1"
            android:layout_width="120dp"
            android:layout_gravity="center"
            android:layout_height="50dp" />
        <ImageView
            android:layout_marginTop="10dp"
            android:src="@drawable/iv_mhs_2"
            android:layout_width="180dp"
            android:layout_gravity="center"
            android:layout_height="50dp" />
        <TextView android:textSize="17sp" android:textColor="@color/preto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_tela_resumo_mhs_mcu_03"/>
        <ImageView
            android:layout_gravity="center"
            android:background="@color/branco"
            android:src="@drawable/iv_0154"
            android:layout_width="250dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"
            android:layout_height="110dp" />
        <ImageView
            android:layout_gravity="center"
            android:background="@color/branco"
            android:src="@drawable/iv_extra_0002"
            android:layout_width="310dp"
            android:scaleType="fitXY"
            android:layout_height="35dp" />
        <TextView android:textSize="17sp" android:textColor="@color/preto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_tela_resumo_mhs_mcu_04"/>
        <ImageView
            android:layout_gravity="center"
            android:background="@color/branco"
            android:src="@drawable/iv_0156"
            android:layout_width="280dp"
            android:scaleType="fitXY"
            android:layout_marginBottom="50dp"
            android:layout_height="150dp" />
    </LinearLayout>
</ScrollView>