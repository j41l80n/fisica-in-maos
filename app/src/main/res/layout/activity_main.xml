<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_principal"
    android:orientation="vertical">
    <LinearLayout
        android:layout_height="fill_parent"
        android:layout_width="match_parent"
        android:background="@drawable/bg_activity_main"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_fisica_in_maos"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="270dp"
                android:layout_height="95dp"
                android:src="@drawable/fisica_in_maos"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:orientation="vertical" >
            <Button
                android:background="@drawable/bt_personalizado_resumos"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:id="@+id/activity_main_bt_resumos"
                />
            <Button
                android:background="@drawable/bt_personalizado_biografias"
                android:layout_marginBottom="10dp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:id="@+id/activity_main_bt_biografias"
                />
            <Button
                android:background="@drawable/bt_personalizado_conversor"
                android:layout_marginBottom="10dp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:id="@+id/activity_main_bt_conversor"
                />
            <Button
                android:background="@drawable/bt_personalizado_simulacoes"
                android:layout_marginBottom="10dp"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:id="@+id/activity_main_bt_simulacoes"
                />
            <Button
                android:background="@drawable/bt_personalizado_questoes"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/activity_main_bt_questoes"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="110dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bt_enviar_email_not_pressed"
        android:id="@+id/activity_main_bt_email"/>
    <com.facebook.share.widget.LikeView
        android:layout_alignParentRight="true"
        android:id="@+id/like_view"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/activity_main_bt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="0dp"
        android:baselineAlignBottom="true"
        android:layout_marginLeft="80dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ifrn"/>
    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_width="100dp"
        android:layout_centerHorizontal="true"
        android:layout_height="100dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="0dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/sbf"/>
</RelativeLayout>