<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:background="@color/branco"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none" >
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="10dp"
            android:src="@drawable/iv_intervalo_tempo"
            android:layout_width="90dp"
            android:layout_gravity="center"
            android:layout_height="60dp" />
        <TextView android:textColor="@color/preto"
            android:textSize="17sp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:id="@+id/tv_tela_resumo_cinematica_05_00" />
        <TextView android:textColor="@color/preto"
            android:textSize="17sp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/tv_tela_resumo_cinematica_05_01">
        </TextView>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView android:textColor="@color/preto"
                    android:textSize="17sp"
                    android:id="@+id/tv_tela_resumo_cinematica_05_02" />
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_tela_resumo_cinematica_05_01"
                    android:inputType="numberDecimal" >
                </EditText>
                <TextView android:textColor="@color/preto"
                    android:textSize="17sp"
                    android:text=" s" />
            </TableRow>
            <TableRow>
                <TextView android:textColor="@color/preto"
                    android:textSize="17sp"
                    android:id="@+id/tv_tela_resumo_cinematica_05_03"/>
                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_tela_resumo_cinematica_05_02"
                    android:inputType="numberDecimal" >
                </EditText>
                <TextView android:textColor="@color/preto"
                    android:textSize="17sp"
                    android:text=" s" />
            </TableRow>
            <TableRow>
                <TextView android:textColor="@color/preto"
                    android:textSize="17sp"
                    android:id="@+id/tv_tela_resumo_cinematica_05_04"/>
                <EditText
                    android:ems="4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_tela_resumo_cinematica_05_03"
                    android:inputType="numberDecimal" >
                </EditText>
                <TextView android:textColor="@color/preto"
                    android:textSize="17sp"
                    android:text=" s" />
            </TableRow>
        </TableLayout>
        <TextView android:textColor="@color/preto"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_tela_resumo_cinematica_05_00_extra"/>
    </LinearLayout>
</ScrollView>